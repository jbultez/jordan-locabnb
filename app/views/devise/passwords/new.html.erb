<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Réinitialiser le mot de passe</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/devise_errors' %>

      <div class="form-group">
        <p class="text-justify">Saisissez l'adresse e-mail associée à votre compte.
        Nous vous enverrons un lien par e-mail pour réinitialiser votre mot de passe.</p>
        <br>
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: 'Adresse E-mail' %>
      </div>

      <div class="actions">
        <%= f.submit "Envoyer un lien de réinitilisation", class:"btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
