<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Modifier mon profil", edit_user_registration_path, class: 'sidebar-link active'%>
      </li>
    </ul>
    <br>
    <%= link_to 'Voir mon profil', user_path(current_user.id), class: "btn btn-default wide1" %>
  </div>
  <div class="col-md-7 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">
        Mon profil
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devise_errors'%>

            <div class="form-group">
              <%= f.text_field :firstname, autofocus: true, class: "form-control", placeholder: "Prénom" %>
            </div>

            <div class="form-group">
              <%= f.text_field :lastname, autofocus: true, class: "form-control", placeholder: "Nom" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <span class="btn btn-default btn-file">
                    Ajouter ma photo
                  <%= f.file_field :avatar, class: "form-control" %>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>
            </div>

            <div class="form-group">
              <%= f.text_area :description, class: "form-control", rows:5, col:25, placeholder: "Ma description" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (Si vous souhaitez le changer)" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
            </div>

            <div class="actions">
              <%= f.submit "Enregistrer", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <% unless current_user.confirmed_at? %>
          <br><br>
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {
            method: :post  do |f|%>
            <%= f.hidden_field :email, value: current_user.email %>
            <div class="actions">
              <%= f.submit "Renvoyer un e-mail de confirmation", class: "btn btn-primary"%>
            </div>
            })
            <%end%>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
