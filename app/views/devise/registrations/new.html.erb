<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <br>
    <%= link_to "Connexion avec Facebook", user_facebook_omniauth_authorize_path, class:'btn btn-primary-fb'%>
    <br><br>
    <center>Ou</center>
    <hr>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'shared/devise_errors'%>

      <div class="form-group">
        <%= f.text_field :firstname, autofocus: true, class: "form-control", placeholder: "PrÃ©nom" %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, class: "form-control", placeholder: "Nom" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation Mot de passe" %>
      </div>

      <div class="actions">
        <%= f.submit "S'inscrire", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
