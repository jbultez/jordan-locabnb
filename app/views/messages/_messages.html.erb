<% @messages.each do |message| %>
  <div class="panel">
    <div class="panel-body">
      <%= image_tag avatar_url(message.user), class: 'img-circle avatar-small'%>
      <strong><%= "#{message.user.lastname.capitalize!} #{message.user.firstname.capitalize!}" %></strong>
      <span class="pull-right"><%= message.created_at %></span>
      <br>
      <div class="row-space-2">
        <%= message.content %>
      </div>
    </div>
  </div>
<%end%>
