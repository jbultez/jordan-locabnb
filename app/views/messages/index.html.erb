<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag avatar_url(@other), class:'img-circle avatar-medium'%><br>
    <strong><%= "#{@other.lastname.capitalize!} #{@other.firstname.capitalize!}"%></strong>
    <%= link_to "Voir profil", @other, class:'btn btn-default wide'%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Discussion avec <%= "#{@other.lastname.capitalize} #{@other.firstname.capitalize}"%>
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>
            <div class="form-group">
              <%= f.text_area :content, placeholder: "Saisissez votre message", class: 'form-control'%>
              <%= f.hidden_field :user_id, value: current_user.id %>
            </div>
            <div class="actions">
              <%= f.submit "Envoyer un message", class: "btn btn-primary"%>
            </div>
          <%end%>
        </div>
      </div>
    </div>
    <div id="chat">
      <%= render @messages, locals: {conversation: @conversation}%>
    </div>
  </div>
</div>
