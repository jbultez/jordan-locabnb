<div class="panel panel-default">
  <div class="panel-heading">
    Devenez hôte Locabnb
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @room, html: {multipart: true} do |f| %>
        <%= render 'shared/errors' %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Type d'habitation</label>
              <%= f.select :home_type, [["Maison","Maison"],["Appartement","Appartement"],["Bed & Breakfast", "Bed & Breakfast"]], id: 'home_type', prompt:"A séléctionner", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Type de logement</label>
              <%= f.select :room_type, [["Logement entier","Logement entier"],["Chambre privée","Chambre privée"],["Chambre partagée", "Chambre partagée"]], id: 'room_type', prompt:"A séléctionner", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Nombre de personnes</label>
              <%= f.select :accomodate, [["1 Personne",1],["2 Personnes",2],["3 Personnes",3],["3 Personnes",3],["4 Personnes",4],["5 Personnes",5],["6 Personnes",6]], prompt:"A séléctionner", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Nombre de chambres</label>
              <%= f.select :bed_room, [["1",1],["2",2],["3",3],["4",4]], prompt:"A séléctionner", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Nombre de salles de bain</label>
              <%= f.select :bath_room, [["1",1],["2",2],["3",3],["4",4]], prompt:"A séléctionner", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Donnez un nom au logement</label>
              <%= f.text_field :listing_name, placeholder: "Titre de l'annonce", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Résumé</label>
              <%= f.text_area :summary, placeholder: "Description de l'ambiance, des activités possibles aux alentours...", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Adresse</label>
              <%= f.text_field :address, placeholder: "Ou est situé votre logement", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                <i class="fa fa-cloud-upload fa-lg"></i> Ajouter une photo
                <%= file_field_tag "images[]", type: :file, multiple: true%>
              </span>
            </div>
          </div>
        </div>

        <div id="photos">
          <%= render 'photos/list' %>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_wifi %> Wifi
            </div>
            <div class="form-group">
              <%= f.check_box :is_tv %> Télévision
            </div>
            <div class="form-group">
              <%= f.check_box :is_closet %> Penderie/Commode
            </div>
            <div class="form-group">
              <%= f.check_box :is_shampoo %> Shampoing
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_kitchen %> Cuisine
            </div>
            <div class="form-group">
              <%= f.check_box :is_breakfast %> Petit déjeuner
            </div>
            <div class="form-group">
              <%= f.check_box :is_heating %> Chauffage
            </div>
            <div class="form-group">
              <%= f.check_box :is_air %> Climatisation
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Prix par nuit</label>
              <div class="input-group">
                <%= f.text_field :price, placeholder: "ex: 45€", class: "form-control"%>
                <div class="input-group-addon">€</div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :active %> Annonce active
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Je valide mon annonce", class:"btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
