<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@user), class:"avatar-full" %>
    <div class="panel panel-default">
      <div class="panel-heading text-center">Vérification</div>
      <div class="panel-body">
        <p>Email: <%= @user.email %></p>
        <p>Tél: <%= @user.phone_number %></p>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= "#{@user.firstname} #{@user.lastname}" %></h2>
    <div class="description row-space-3">
      <p><%= @user.description %></p>
    </div>

    <h4>Annonces (<%= @rooms.length %>)</h4>

    <div class="row">
      <% @rooms.each do |room| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
            </div>
            <div class="panel-body">
              <%= link_to room.listing_name, room %>
            </div>
          </div>
        </div>
      <%end%>
    </div>

    <h4>Evaluations</h4>
    <% @rooms.each do |room|%>
      <%if !room.reviews.blank? %>
        <% room.reviews.each do |review| %>
          <div class="row">
            <div class="col-md-2 text-center">
              <%= image_tag avatar_url(review.user), class: "img-circle avatar-medium" %> <br>
              <%= review.user.lastname%> <%= review.user.firstname%>
            </div>
            <div class="col-md-10">
              <%= link_to room.listing_name, room %> <br>
              <%= review.comment %> <br>
              <%= review.created_at.strftime("(%d/%m/%y)")%>
            </div>
          </div>
        <%end%>
      <%end%>
    <%end%>
  </div>
</div>
